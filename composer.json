{
  "name": "ajooda/laravel-ai-metering",
  "description": "AI usage metering and billing for Laravel apps (tokens, quotas, credits, billing).",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "ai",
    "metering",
    "billing",
    "openai",
    "anthropic",
    "usage-tracking"
  ],
  "authors": [
    {
      "name": "AbdAlhadi Jouda",
      "email": "abdalhadijouda@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/ajooda/laravel-ai-metering/issues",
    "source": "https://github.com/ajooda/laravel-ai-metering"
  },
  "require": {
    "php": "^8.1",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "illuminate/database": "^10.0|^11.0|^12.0",
    "illuminate/console": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0|^9.0|^10.0",
    "phpunit/phpunit": "^10.0|^11.0",
    "laravel/pint": "^1.0"
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "autoload": {
    "psr-4": {
      "Ajooda\\AiMetering\\": "src/",
      "Ajooda\\AiMetering\\Database\\Factories\\": "database/factories/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ajooda\\AiMetering\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Ajooda\\AiMetering\\AiMeteringServiceProvider"
      ],
      "aliases": {
        "AiMeter": "Ajooda\\AiMetering\\Facades\\AiMeter"
      }
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}